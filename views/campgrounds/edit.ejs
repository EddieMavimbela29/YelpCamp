<%- include("../partials/header"); %>

<h1 style="text-align: center; ">Edit <%= campground.name %></h1>

<div style="width: 30%; margin: 25px auto;">
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
       <input  class="form-control" name="campground[name]"  value="<%= campground.name %>" type="text">
       <input class="form-control" name="campground[image]"  value="<%= campground.image %>" type="text">
       <input class="form-control" name="campground[description]"  value="<%= campground.description %>" type="text">
       <button class="btn btn-primary btn-block">Submit</button>
    </div>
 </form>

<a href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer")%>